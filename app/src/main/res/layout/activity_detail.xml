<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff5500"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/iv_large_cover"
        android:scaleType="centerCrop"
        android:background="#00ff55"
        />
    <RelativeLayout
        android:id="@+id/subscription_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv_large_cover"
        android:background="#fff"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="订阅+"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_subscription_bg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detail_control_container"
        android:layout_width="match_parent"
        android:layout_below="@id/subscription_container"
        android:background="#EBE8E8"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/detail_play_control"
            android:layout_width="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/playsound"
            android:layout_height="19dp" />
        <TextView
            android:layout_toRightOf="@id/detail_play_control"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续播放"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/detail_arrow"
            android:text="选集"
            />
        <ImageButton
            android:id="@+id/detail_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/pulldown"
            />
    </RelativeLayout>

    <com.mint.ximalaya.views.RoundRectImageView
        android:id="@+id/viv_small_cover"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-40dp"
        android:layout_below="@id/iv_large_cover"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_toRightOf="@id/viv_small_cover"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/iv_large_cover"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Title"
            />
        <TextView
            android:id="@+id/tv_album_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/sub_text_title"
            android:text="Author"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/detail_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_control_container"
        android:background="#fff"
        ></FrameLayout>

</RelativeLayout>